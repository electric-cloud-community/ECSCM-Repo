<editor>
    <help>/commander/pages/@PLUGIN_NAME@/@PLUGIN_KEY@_help?s=Administration&amp;ss=Plugins#CheckoutCode</help>
    <formElement>
        <type>entry</type>
        <label>Configuration:</label>
        <property>config</property>
        <documentation>The SCM configuration so use.</documentation>
        <required>1</required>
    </formElement>
    <formElement>
        <type>checkbox</type>
		<checkedValue>1</checkedValue>
		<uncheckedValue>0</uncheckedValue>
        <label>Use agent path:</label>
        <property>RepoAgentPath</property>
		<documentation>A path defined in custom resource property of a resource, where the source tree will be created.</documentation>
        <required>0</required>
    </formElement>   
    <formElement>
        <type>entry</type>
        <label>Destination Directory:</label>
        <property>dest</property>
        <documentation>A path relative to the job's workspace, where the source tree will be created.</documentation>
    </formElement>
    <formElement>
        <type>entry</type>
        <label>Branch:</label>
        <property>RepoBranch</property>
        <required>0</required>
        <documentation>The Git branch to use.</documentation>
    </formElement>   
    <formElement>
        <type>entry</type>
        <label>Project list:</label>
        <property>RepoProjectList</property>
        <required>0</required>        
    </formElement>  	
</editor>
